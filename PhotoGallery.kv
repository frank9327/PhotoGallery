MouseTouch

<MouseTouch>:
    txtinput: enter
    button: load
    image: img
    BoxLayout:
        size: "800dp", "600dp"
        orientation: "vertical"
        TextInput:
            id: enter
        Button:
            id: load
            text: "Press me"
        Image:
            id: img
            source: ""
            size_hint: 1,10

<Display>:
    BoxLayout:
        orientation : "vertical"
        BoxLayout:
            orientation: "vertical"
            BoxLayout:
                orientation: "horizontal"
                TextInput:
                    id:img
                    hint_text: "Enter image name (e.g,image,png)"
                Button:
                    text: "load image"
                    on_release: root.load_image()
            BoxLayout:
                orientation: "horizontal"
                Button:
                    text: "Vertical lines"
                    on_release: root.vertical_lines(root.ids.image.source,"space",0,20,200)
                Button:
                    text: "Diagonal lines"
                    on_release: root.diagnol_lines(root.ids.image.source,"space",0,20,200)
            BoxLayout:
                orientation: "horizontal"
                Button:
                    text: "Invert"
                    on_release: root.invert(root.ids.image.source)
                Button:
                    text: "Sepia"
                    on_release: root.sepia(root.ids.image.source)
            BoxLayout:
                orientation: "horizontal"
                Button:
                    text: "black and white"
                    on_release: root.black_and_white(root.ids.image.source)
                Button:
                    text: "Pixelate"
                    on_release: root.pixelate(root.ids.image.source,"space",50,50,75,75)
        Image:
            id: image
            source: ""